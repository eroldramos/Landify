{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",              // Node ESM mode
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include":["src/**/*.ts"],
  "exclude": ["node_modules"]
}
